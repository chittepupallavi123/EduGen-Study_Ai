generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String?        @unique
  phone         String?        @unique
  streak        Int            @default(0)
  quizCount     Int            @default(0)
  totalScore    Int            @default(0)
  solvedCount   Int            @default(0)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  learnDocs     LearnDocument[]
  quizzes       Quiz[]
  quizAttempts  QuizAttempt[]
}

model LearnDocument {
  id        String   @id @default(cuid())
  userId    String
  subject   String
  mode      String
  topics    String
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Quiz {
  id        String         @id @default(cuid())
  userId    String
  subject   String
  topics    String
  createdAt DateTime       @default(now())
  user      User           @relation(fields: [userId], references: [id])
  questions QuizQuestion[]
}

model QuizQuestion {
  id          String   @id @default(cuid())
  quizId       String
  prompt      String
  options     String
  answer      String
  explanation String
  quiz        Quiz     @relation(fields: [quizId], references: [id])
}

model QuizAttempt {
  id        String   @id @default(cuid())
  userId    String
  quizId    String
  score     Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
